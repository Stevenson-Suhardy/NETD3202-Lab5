@model IEnumerable<ProductSellerWebsite.Models.Seller>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Welcome to Product and Seller Website!</title>
</head>
<body>
    <!-- Using div to make a nav bar -->
    <div class="container-fluid">
        <div class="list-group list-group-horizontal">
            <a class="list-group-item list-group-item-action" href="~/Home/Index">Home</a>
            <a class="list-group-item list-group-item-action" href="~/Products">Manage Products</a>
            <a class="list-group-item list-group-item-action active" aria-current="true" href="~/Sellers">Manage Sellers</a>
        </div>
    </div>
    <hr />
    <h1>Manage Sellers</h1>
    <!-- Creating a button to change view to create new Product -->
    <p>
        <a class="btn btn-primary btn-lg active" asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <!-- Generate table header -->
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SellerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <!-- Generate data from the model -->
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <!-- Creating Read, Update, and Delete functionality for each product -->
                        <a class="btn btn-secondary btn-sm active" asp-action="Edit" asp-route-id="@item.SellerID">Edit</a> |
                        <a class="btn btn-secondary btn-sm active" asp-action="Details" asp-route-id="@item.SellerID">Details</a> |
                        <a class="btn btn-secondary btn-sm active" asp-action="Delete" asp-route-id="@item.SellerID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>